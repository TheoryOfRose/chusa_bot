<?xml version="1.0"?>
<launch>

  <arg name="rviz_config" default="$(find chusa_bringup)/rviz/rviz_config.rviz"/>
  <arg name="joint_gui" default="False"/>

  <param name="robot_description" textfile="$(find chusa_bringup)/urdf/chusa_bot.urdf"/>
  
  <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher">
    <param name="use_gui" value="$(arg joint_gui)"/>
  </node>

  <node name="robot_state_publisher" pkg="robot_state_publisher" type="state_publisher"/>

  <include file="$(find rplidar_ros)/launch/rplidar.launch"/>

  <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rviz_config)"/>

</launch>