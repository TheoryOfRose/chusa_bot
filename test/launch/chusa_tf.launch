<?xml version="1.0"?>
<launch>

  <arg name="joint_gui" default="False"/>
  <param name="robot_description" command="$(find xacro)/xacro --inorder $(find chusa_description)/urdf/chusa.urdf.xacro"/>
  

  <!-- send fake joint values -->
  <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher">
    <param name="use_gui" value="$(arg joint_gui)"/>
  </node>

  <!-- Combine joint values -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="state_publisher"/>

  <!-- Show in Rviz   -->
  <!--node name="rviz" pkg="rviz" type="rviz" args="-d $(find mybot_description)/launch/myrobot.rviz"/-->

</launch>
